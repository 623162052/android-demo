<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/normal_margin"
    tools:context="cs.plugins.map.amap.demo.LocationAccuracyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_gpsFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gpsFirst"
                />

            <Button
                android:id="@+id/bt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/startLocation" />

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin" />


            <Button
                android:id="@+id/bt_location2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/startLocation" />

            <TextView
                android:id="@+id/tv_result2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin" />

            <Button
                android:id="@+id/bt_location_calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算距离" />

            <TextView
                android:id="@+id/bt_location_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>